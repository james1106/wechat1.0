/* 标签切换--S */

.swiper-tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height:81rpx;
  padding-bottom: 6rpx;
  line-height:86rpx;
  text-align: center;
  color: #9a9a9a;
  border-bottom: solid 1rpx #e5e5e5;
}
.swiper-box{
  padding:20rpx;
  background-color: #f4f4f4;
}
.swiper-tab-item {
  width:70rpx;
   border-bottom: 4rpx solid #fff;
}
.on{
  color: #00cdf2;
  border-bottom: 4rpx solid #00cdf2;
}
.swiper-tab-type {
  display: flex;
  width: 320rpx;
  margin:0 auto;
  justify-content: space-around;
  align-items: center;
  margin-top:30rpx;
  margin-bottom:30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #b2b2b2;
}
.swiper-tab-item-type {
  width:160rpx;
  border-radius: 30rpx 0 0 30rpx;
  background-color: #fff;
}
.swiper-tab-item-type:nth-child(2){
   border-radius: 0 30rpx 30rpx 0;
}
.ontype{
  color: #fff;
 background: #00cdf2;
}


