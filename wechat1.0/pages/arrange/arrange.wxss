/* 车型列表 S */

.drawer-content-item > text {
  display: block;
  background: #eee;
  color: #777;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 17rpx 32rpx;
}

::-webkit-scrollbar {
  /*隐藏滚动条*/
  width: 0;
  height: 0;
  color: transparent;
}

.drawer-child {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 180rpx;
  margin-bottom: 20rpx;
  position: relative;
  overflow: hidden;
  background-color: #fff;
  border-radius: 6rpx;
}

.drawer-info {
  padding-left: 30rpx;
}

.drawer-info > text {
  display: block;
  padding-bottom: 20rpx;
}

.drawer-price {
  color: #ff6600;
  padding-top: 20rpx;
}

.img-model {
  width: 270rpx;
  height: 180rpx;
  border-radius: 0;
  margin-left: 20rpx;
  display: inline-block;
  overflow: hidden;
}

.drawer-number {
  width:120rpx;
  height:120rpx;
  position: absolute;
  background: #aaa;
  left: -60rpx;
  top: -60rpx;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
  text-align: right;
  line-height: 170rpx;
}
.drawer-number text{
  position:relative;
  left: -30rpx;
  color: #fff;
}
.drawer-child:nth-child(1) .drawer-number{
   background: #da3434;
}
.drawer-child:nth-child(2) .drawer-number{
   background: #ea6200;
}
.drawer-child:nth-child(3) .drawer-number{
   background: #f39900;
}
