/* 续航排行 */
.container {
  font-size: 28rpx;
  /* background: #f4f4f4; */
}
/* 标签切换--S */

.sharebtn {
  /* animation: kf-marque-animation 3s linear infinite; */
  background: #33adff;
  padding: 0 30rpx 0 20rpx;
  box-shadow: 0 4rpx 12rpx 0 rgba(50, 173, 255, 0.30);
  border-radius: 0 200rpx 200rpx 0;
  /* width:280rpx;  */
  height: 60rpx;
  position: fixed;
  bottom: 126rpx;
  font-size: 24rpx;
  color: #fff;
  left: -19%; 
  line-height: 60rpx
}

.sharebtnicon {
  width: 36rpx;
  margin:0 0 5rpx 12rpx;
}

.swiper-tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height:81rpx;
  padding-bottom: 6rpx;
  line-height:86rpx;
  text-align: center;
  color: #666666;
  font-size: 34rpx;
  border-bottom: solid 1rpx #e6e6e6;
  background-color: #fafafa;
}

.swiper-tab-item {
   border-bottom:2rpx solid #fafafa;
}
.on{
  color: #33adff;
  border-bottom: 6rpx solid #33adff;
}
.swiper-tab-type {
  display: flex;
  width: 320rpx;
  margin:0 auto;
  justify-content: space-around;
  align-items: center;
  margin-top:30rpx;
  margin-bottom:30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #b2b2b2;
}
.swiper-tab-item-type {
  width:160rpx;
  border-radius: 30rpx 0 0 30rpx;
  background-color: #fff;
}
.swiper-tab-item-type:nth-child(2){
   border-radius: 0 30rpx 30rpx 0;
}
.ontype{
  color: #fff;
 background: #00cdf2;
}


/* 标签切换--E */


/* 车型列表 S */



 ::-webkit-scrollbar { 
  /*隐藏滚动条*/
   width: 0;
  height: 0;
  color: transparent;
} 

.drawer-child {
  display: flex;
  align-items: center;
  height: 200rpx;
  overflow: hidden;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
  margin: 0 30rpx;
}

.drawer-info {
  padding-left: 20rpx;
}

.drawer-info > text {
  width: 310rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: block;
  font-size: 34rpx;
  color: #333;
}

.drawer-price {
  color: #d0011b;
}
.img-model {
  width: 240rpx;
  height: 160rpx;
  border-radius: 0;
  display: inline-block;
  overflow: hidden;
}


/* 车型列表 E */
.drawer-child-intro{
  width: 100%;
  -webkit-box-flex: 1;
  justify-content: flex-start; 
  align-items: center;
  display: flex;
}
.drawer-endurance{
  width: 112rpx;
  height: 86rpx;
  color: #33adff;
  background: url("http://i1.dd-img.com/assets/image/1510122385-093826c8cf8ed6d1-100w-80h.png") no-repeat;
  background-size: 100%;
  text-align: center;
}
.drawer-endurance text{
  font-size: 36rpx;
  line-height: 60rpx;
}
.drawer-endurance view{
  font-size: 20rpx;
  line-height: 2rpx;
}

.drawer-info-price{
  font-size: 24rpx;
  color: #999999;
  padding-top: 20rpx;
}
.explain{
  height: 60rpx;
  line-height: 60rpx;
  background:#fafafa;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #999999;
}
.none{
  display: none;
}

